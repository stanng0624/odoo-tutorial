{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "silverlit-odoo-dev-17.0",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "console": "integratedTerminal",
            "args": [
                "-c","${workspaceFolder}/conf/odoo17-macos.conf",
                "--limit-time-real", "99999",
                // "-d", "silverlit-odoo-dev",
                "--dev", "all" // Enable developer mode
            ],
            "preLaunchTask": "Open Odoo in Browser",
            // "postDebugTask": "Open Odoo in Browser"            
        },
        {
            "name": "silverlit-odoo-dev-17.0-install-addons",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "console": "integratedTerminal",
            "args": [
                "-c","${workspaceFolder}/conf/odoo17-macos.conf",
                "--limit-time-real", "99999",
                // "-d", "silverlit-odoo-dev",
                "-i","",
                // "--stop-after-init"
            ]
        },
        {
            "name": "silverlit-odoo-dev-17.0-update-addons",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "console": "integratedTerminal",
            "args": [
                "-c","${workspaceFolder}/conf/odoo17-macos.conf",
                "--limit-time-real", "99999",
                // "-d", "silverlit-odoo-dev",
                "-u","novus_base,novus_sap_connector, novus_silverlit_report, novus_loading_plan",
                "--stop-after-init"
            ]
        },
        {
            "name": "silverlit-odoo-dev-17.0-repl",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "console": "integratedTerminal",
            "args": [
                "shell",
                "-c","${workspaceFolder}/conf/odoo17-macos.conf",
                "--limit-time-real", "99999",
                "--xmlrpc-port","8888",
                "--longpolling-port","8899",
                // "-d", "silverlit-odoo-dev-17.0",
                "--shell-interface", "ipython"
            ]
        },
    ]
  }